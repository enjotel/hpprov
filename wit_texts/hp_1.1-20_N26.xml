      <lg xml:id="HP15">
	<l>śrīādināthamatsyendrasāgarānantabhairavaḥ/</l>
	<l>cauraṅgīmīnagorakṣavirūpākhyabileśayāḥ//</l>
      </lg>
      <lg xml:id="HP16">
	<l>manthānabhairavo yogī viddhir buddhiś ca kārāṭhaḍī/</l>
	<l>paurarāṭikaḥ surānandaḥ siddhapādaś ca carpaṭī//</l>
      </lg>
      <lg xml:id="HP17">
	<l>kānerī pūjyanāthaś ca nityanātho nirañjanaḥ/</l>
	<l>{}{} {}//</l>
      </lg>
      <lg xml:id="HP18">
	<l>allāmaḥ prabhudevaś ca ghoḍācolīś ca ciṃcilī/</l>
	<l>vāsukī nāgarodhaś ca khaṇḍakāpālikas tathā//</l>
      </lg>
      <lg xml:id="HP19">
	<l>ityādayo mahāsiddhahaṭhayogaprasādataḥ/</l>
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe vicaranti te//</l>
      </lg>
      <lg xml:id="HP110">
	<l>saṃsāratāpataptānāṃ āśramo yaṃ haṭho mataḥ/</l>
	<l>aśeṣayogayuktānām ādhāraḥ kamaṭho yathā//</l>
      </lg>
      <lg xml:id="HP111">
	<l>haṭhavidyā paraṃ gopyā yogināṃ siddhim icchatām/</l>
	<l>bhaved vīryavatī guptā nirvīryā tu prakāśitā//</l>
      </lg>
      <lg xml:id="HP112">
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l>
	<l/>
	<l>  </l>
	<l> </l>
	<l/>
	<l> </l>
	<l>ekānte maṭhikāmadhye sthātavyaṃ haṭhayoginā//</l>
	<l/>
      </lg>
      <lg xml:id="HP113">
	<l>alpadvāram arandhragarttaviṭapaṃ nātyuccanīcāpitaṃ/</l>
	<l>samyag gomayasāndraliptavimalaṃ niḥśeṣabādhojjhitam/</l>
	<l>bāhye maṇḍapavedikūparuciraṃ prākārasaṃveṣṭitaṃ/</l>
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ//</l>
      </lg>
      <lg xml:id="HP114">
	<l>evaṃvidhe maṭhe sthitvā sarvacintāvivarjitaḥ/</l>
	<l>gurūpadiṣṭamārgeṇa yogamārgaṃ samabhyaset//</l>
      </lg>
      <lg xml:id="HP115">
	<l>atyāhāraḥ prayāsaś ca prajalpo niyamagrahaḥ/</l>
	<l>janasaṅgaś ca laulyaṃ ca ṣaḍbhir yogo vinaśyati//</l>
      </lg>
      <lg xml:id="HP116">
	<l>utsāhān niścayād dhairyāt tattvajñānāc ca darśanāt/</l>
	<l>janasaṅgaparityāgāt ṣaḍbhir yogaḥ prasidhyatiḥ//</l>
      </lg>
      <lg xml:id="HP116a">
	<l/>
	<l>ahiṃsā satyam asteyaṃ brahmacaryaṃ kṣamā dhṛtiḥ/</l>
	<l>dayārjavaṃ mitāharaḥ śaucaṃ caiva yamā daśa//</l>
      </lg>
      <lg xml:id="HP116b">
	<l>tapaḥ saṃtoṣam āstikyaṃ dānam  īśvarapūjanaṃ/</l>
	<l>siddhāntaśravaṇaṃ caiva hrīmatiś ca japā hutam//</l>
	<l>niyamā daśa saṃproktā yogaśāstraviśāradaiḥ//</l>
      </lg>
      <lg xml:id="HP116c">
	<l/>
      </lg>
      <lg xml:id="HP117">
	<l>haṭhapramathāṅgatvād āsanaṃ pūrvam ucyate/</l>
	<l>tatkuryād āsanaṃ sthairyam ārogyaṃ cāṅgapāṭavam//</l>
      </lg>
      <lg xml:id="HP118">
	<l>vasiṣṭhādyaiś ca munibhir matsyendrādyaiś ca yogibhiḥ/</l>
	<l>aṅgīkṛtā nyāsanāni kathyante kānicinmayā//</l>
      </lg>
      <lg xml:id="HP119">
	<l>jānūrvor antare samyak kṛtvā pādatale ubhe/</l>
	<l>ṛjukāyaḥ samāsīnaḥ svastikaṃ tat pracakṣyate//</l>
      </lg>
      <lg xml:id="HP119a">
	<l/>
	<l/>
      </lg>
      <lg xml:id="HP119b">
	<l/>
	<l/>
      </lg>
      <lg xml:id="HP120">
	<l>savyadakṣiṇagulphau tu pṛṣṭhapārśve niyojayet/</l>
	<l>dakṣe caiva tathā savyaṃ gomukhaṃ gomukhaṃ tathā//</l>
      </lg>
