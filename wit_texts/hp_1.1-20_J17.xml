      <lg xml:id="HP11">
	<l>śrīādināthāya namo 'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājayogam ārohim icchor adhirohiṇīva//</l>
      </lg>
      <lg xml:id="HP12">
	<l>praṇamya śrī guruṃ nāthaṃ svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhavidyopadiśyate//</l>
      </lg>
      <lg xml:id="HP13">
	<l>bhrāntyā bahumatādhvānte rājayogam ajānatām/</l>
	<l>haṭhapradīpikāṃ dhatte svātmārāmaḥ kṣamākaraḥ//</l>
      </lg>
      <lg xml:id="HP14">
	<l>haṭhavidyāṃ hi matsyendragorakṣādyā vijānate/</l>
	<l>svātmārāmo 'thavā yogī jānite tatprasādataḥ//</l>
      </lg>
      <lg xml:id="HP15">
	<l>ādināthādimatsyendraśābarānandabhairavaḥ/</l>
	<l>cauraṅgīmīnagorakṣavirupākṣabileśayāḥ//</l>
      </lg>
      <lg xml:id="HP16">
	<l>manthānabhairavo yogī śuddhabuddhaś ca kandalī/</l>
	<l>pauraṇṭakaḥ surānandaḥ siddhapādaś ca carppaṭī//</l>
      </lg>
      <lg xml:id="HP17">
	<l>kānerī pūrvapādaś ca dhvaninātho nirañjanaḥ/</l>
	<l>kapālībindunāthaś ca kākacaṇḍīśvarādayaḥ//</l>
      </lg>
      <lg xml:id="HP18">
	<l>allamaḥ prabhudevaś ca ghorācolī ca ṭiṇṭiṇī/</l>
	<l>bhālukī nāgabodhaś ca khaṇḍakapālikas tathā//</l>
      </lg>
      <lg xml:id="HP19">
	<l>ityādayo mahāsiddhā haṭhayogaprabhāvataḥ/</l>
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe vicaranti te//</l>
      </lg>
      <lg xml:id="HP110">
	<l>saṃsāraśramataptānām āśrayo yaṃ haṭho mataḥ/</l>
	<l>aśeṣayogajuktānām ādhāraḥ kamaṭho haṭha//</l>
      </lg>
      <lg xml:id="HP111">
	<l>haṭhavidyāṃ paraṃ gopyā yogināṃ siddhim icchatām/</l>
	<l>bhaved vīryavatī guptā nirvīryā nu prakāśitā//</l>
      </lg>
      <lg xml:id="HP112">
	<l>surājye dhārmike deśe subhikṣe nirupadravai/</l>
	<l/>
	<l>  </l>
	<l> </l>
	<l/>
	<l> </l>
	<l>ekānte maṭhikāmadhye sthātavyaṃ haṭhayogināṃ//</l>
	<l/>
      </lg>
      <lg xml:id="HP113">
	<l>alpadvāram arandhragartapiṭhakaṃ nātyuccānīcāpitaṃ/</l>
	<l>samyag gomayasāṃrdralīptam amalaṃ nirdoṣabādhojjhitam/</l>
	<l>vyāhye maṇḍapavedikūparacitaṃ prākārasaṃveṣṭitaṃ/</l>
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ//</l>
      </lg>
      <lg xml:id="HP114">
	<l>evaṃvidhe maṭhe sthitvā sarvacintāvivarjitaḥ/</l>
	<l>gurupadiṣṭamārgeṇa yogam evaṃ samabhyaset//</l>
      </lg>
      <lg xml:id="HP115">
	<l>atyāhāraḥ prayāsaś ca prajalpo niyamagrahaḥ/</l>
	<l>janasaṅgaś ca laulyaṃ ca ṣaḍbhir yogaś ca naśyati//</l>
      </lg>
      <lg xml:id="HP116">
	<l>utsāhān niścayād dhairyāt tattvajñānāc ca darśanāt/</l>
	<l>janasaṅgaparityāgāt ṣaḍbhir yogas tu sidhyati//</l>
      </lg>
      <lg xml:id="HP116a">
	<l/>
	<l>   </l>
	<l>  </l>
      </lg>
      <lg xml:id="HP116b">
	<l/>
	<l> </l>
	<l/>
      </lg>
      <lg xml:id="HP116c">
	<l>athāsanāni//</l>
      </lg>
      <lg xml:id="HP117">
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam uccyate/</l>
	<l>kuryāt tad āsanaṃ tasmād ārogyaṃ cāṅgapāṭavaṃ//</l>
      </lg>
      <lg xml:id="HP118">
	<l>vasiṣṭhādyaiś ca munibhir matsyendrādyaiś ca yogibhiḥ/</l>
	<l>aṃgīkṛtyā nyāsanāni kathyante kānicinmayā//</l>
      </lg>
      <lg xml:id="HP119">
	<l>jānūrvor antare samyak kṛtvā pādatale ubhe/</l>
	<l>ṛjukāyaḥ samāsīnaḥ svastikaṃ tat pracakṣate//</l>
      </lg>
      <lg xml:id="HP119a">
	<l/>
	<l/>
      </lg>
      <lg xml:id="HP119b">
	<l/>
	<l/>
      </lg>
      <lg xml:id="HP120">
	<l>sarvye dakṣiṇagulpuṃn tu pṛṣṭhapārśve niyojayet/</l>
	<l>dakṣiṇe 'pi tathā sarvyaṃ gomukhaṃ gaumukhaṃ yathā//</l>
      </lg>
