      <lg xml:id="HP11">
	<l>śrīādināthāya namo 'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate proṃtatarājasaudham āroḍhum icchor adhirohiṇīva//</l>
      </lg>
      <lg xml:id="HP12">
	<l>praṇamya śrī guruṃ nāthaṃ svātmārāmeṇa dhīmatā/</l>
	<l>kevale rājayogāyaṃ haṭhavidyopadṛśyate//</l>
      </lg>
      <lg xml:id="HP13">
	<l>bhrāntvā bahumataṃ dhvānte rājayogam ajānataḥ/</l>
	<l>haṭhapradīpikāṃ cakre svātmārāmaḥ kṛpāparaḥ//</l>
      </lg>
      <lg xml:id="HP14">
	<l>haṭhavidyāṃ hi matsyendragorakṣādyā vijānate/</l>
	<l>ātmārāmo 'thavā yogī jānīte tatprasādataḥ//</l>
      </lg>
      <lg xml:id="HP15">
	<l>śrīādināthamatsyendraśāradānandabhairavaḥ/</l>
	<l>cauraṅgīmīnagorakṣavirūpākṣabileśayāḥ//</l>
      </lg>
      <lg xml:id="HP16">
	<l>manthānabhairavo yogī siddhabuddhaś ca  kanthaḍiḥ/</l>
	<l>pauraṇḍakaḥ surānandaḥ siddhapādaś ca carpaṭī//</l>
      </lg>
      <lg xml:id="HP17">
	<l>kānerī pūjyapādaś ca bilvanātho nirañjanaḥ/</l>
	<l>kapālībindunāthaś ca kākacaṇḍīśvarādayaḥ//</l>
      </lg>
      <lg xml:id="HP18">
	<l>sukṣamaḥ prabhudevaś ca ghoḍācolī gha ṭiṭiṇiḥ/</l>
	<l>bālakīr nāgabodhaś ca caṇḍakāpālikas tathā//</l>
      </lg>
      <lg xml:id="HP19">
	<l>ityādayo mahāsiddhahaṭhayogaprabhāvataḥ/</l>
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe ramayaṃti te//</l>
      </lg>
      <lg xml:id="HP110">
	<l>saṃsāraśramataptānāṃ śamāśrayamaṭho haṭhaḥ/</l>
	<l>aśeṣayogajagatānam ādhāraḥ kamaṭho haṭhaḥ//</l>
      </lg>
      <lg xml:id="HP111">
	<l>haṭhavidyāṃ paraṃ gopyā yogināṃ siddhim icchatā/</l>
	<l>bhaved vīryavatī goptā nirvīryā tu prakāśitā//</l>
      </lg>
      <lg xml:id="HP112">
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l>
	<l/>
	<l>  </l>
	<l> </l>
	<l/>
	<l> </l>
	<l>ekāntamaṭhikāmadhye sthātavyaṃ haṭhayoginā//</l>
	<l/>
      </lg>
      <lg xml:id="HP113">
	<l>alpadvāram arandhragataṃ pīṭhaṃran nātyuccanicāpitaṃ/</l>
	<l>samyag gomayasāndraliptavimalaṃ niḥśeṣajaṃturjjitaṃ/</l>
	<l>bāhye maṇḍapa prakāraṃ saṃveṣṭitaṃ/</l>
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddheḥ haṭhābhyāsibhiḥ//</l>
      </lg>
      <lg xml:id="HP114">
	<l>evaṃvidhe maṭhe sthitvā sarvacintāvivarjitaḥ/</l>
	<l>gurūpaviṣṭamārgeṇa yogam eva sadābhyaset//</l>
      </lg>
      <lg xml:id="HP115">
	<l>alpāhāraḥ prayāsaś ca prajalpo niyamo grahaḥ/</l>
	<l>janasaṅgaś ca laulyaṃ ca ṣaḍbhir yogair vinaśyati//</l>
      </lg>
      <lg xml:id="HP116">
	<l>utsāhān sāhasād dhairyāt tattvajñānād viniścayāt/</l>
	<l>janasaṅgaparityāgāt ṣaḍbhir yoga prasidhyati//</l>
      </lg>
      <lg xml:id="HP116a">
	<l/>
	<l>ahiṃsā satyam asteyaṃ brahmacarye kṣamā dhṛtiḥ/</l>
	<l>dayārjavamitāhāraḥ śaucaṃ caiva yamā daśa//</l>
      </lg>
      <lg xml:id="HP116b">
	<l>tapaḥ santoṣa āstikyaṃ dānam  īśvarapūjanaṃ/</l>
	<l>siddhāṃtaśravaṇaścaiva hrīr matiś ca tapo hutaṃ//</l>
	<l/>
      </lg>
      <lg xml:id="HP116c">
	<l/>
      </lg>
      <lg xml:id="HP117">
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam uccaret/</l>
	<l>kuryāt tathāsanaṃ dhairyyaṃ ārogyaṃ cāṅgalāccataṃ//</l>
      </lg>
      <lg xml:id="HP118">
	<l>vasiṣṭhādyaiś ca munibhiḥ matsyendrādyaiś ca yogibhiḥ/</l>
	<l>aṅgīkṛtā nyāsanāni vakṣyate kānicinmayā//</l>
      </lg>
      <lg xml:id="HP119">
	<l>jānūrvor antare samyak kṛtvā pādatale ubhe/</l>
	<l>ṛjukāyaḥ samāsīnaḥ svastikaṃ tat pracakṣate//</l>
      </lg>
      <lg xml:id="HP119a">
	<l/>
	<l/>
      </lg>
      <lg xml:id="HP119b">
	<l/>
	<l/>
      </lg>
      <lg xml:id="HP120">
	<l>savye dakṣiṇagulphaṃ tu pṛṣṭhapārśve niyojayet/</l>
	<l>dakṣiṇe ca tathā savye gomukhaṃ gomukhaṃ yathā//</l>
      </lg>
