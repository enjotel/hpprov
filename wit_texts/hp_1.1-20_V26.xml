      <lg xml:id="HP11">
	<l>śrīādināthāya namo 'stu te tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājasaudham āroḍhum icchor adhirohiṇīva//</l>
      </lg>
      <lg xml:id="HP12">
	<l>praṇamya śrī guruṃ nāthaṃ ātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhavidyā prakāśyate//</l>
      </lg>
      <lg xml:id="HP13">
	<l>bhrāntyā bahumatadhvāntai rājamārgamajānataḥ/</l>
	<l>haṭhapradīpikāṃ dhatte ātmārāmo nirañjanaḥ//</l>
      </lg>
      <lg xml:id="HP14">
	<l>haṭhavidyāṃ hi matsyendragorakṣādyā vijānate/</l>
	<l>ātmārāmo 'thava yogī jānīte tatprasādataḥ//</l>
      </lg>
      <lg xml:id="HP15">
	<l>śrīādināthamatsyendrasāvadānandabhaivarāḥ/</l>
	<l>cauraṅgīmīnagaurakṣau virūpākṣaś ca ceḍalaḥ//</l>
      </lg>
      <lg xml:id="HP16">
	<l>manthānabhaivarau yogī śuddhabuddhiś ca kānuṭiḥ/</l>
	<l>kauraṇḍakaḥ surānandaḥ siddhapādaś ca carpaṭiḥ//</l>
      </lg>
      <lg xml:id="HP17">
	<l>kāvarī pūjyapādaś ca nityanātho virañjanaḥ/</l>
	<l>kalāpībindunāthaś ca kākaguṇḍīśvarāhvayaḥ//</l>
      </lg>
      <lg xml:id="HP18">
	<l>akṣamaḥ prabhudevaś ca ghoḍāculī ca ciṃcilī/</l>
	<l>vāsukināgadevaś ca khaṇḍakāpālikas tathā//</l>
      </lg>
      <lg xml:id="HP19">
	<l>ityādayo mahāsiddhā haṭhayogaprabhāvataḥ/</l>
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe vicaranti te//</l>
      </lg>
      <lg xml:id="HP110">
	<l>saṃsāratāpataptānāṃ samāśrayamato haṭhaḥ/</l>
	<l>aśeṣayogavijñānasarvasiddhipradāyakaḥ//</l>
      </lg>
      <lg xml:id="HP111">
	<l>haṭhavidyā paraṃ gopyā yoginā siddhim icchatā/</l>
	<l>bhaved vīryavatī guptā nirvīryā ti prakāśitā//</l>
      </lg>
      <lg xml:id="HP112">
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l>
	<l/>
	<l>  </l>
	<l> </l>
	<l/>
	<l> </l>
	<l>ekānte maṭhikāmadhye sthātavyaṃ haṭhayoginā//</l>
	<l/>
      </lg>
      <lg xml:id="HP113">
	<l>alpadvāram arandhragartapuṭitaṃ nātyuccanīcātmakaṃ/</l>
	<l>samyag jogamayasyantraliptavimalaṃ niḥśeṣabodhekṣitaṃ/</l>
	<l>bāhye maṇḍapakūpavediracitaṃ prākārasaṃveṣṭitaṃ/</l>
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ//</l>
      </lg>
      <lg xml:id="HP114">
	<l>evaṃvidhe maṭhe sthitvā sarvacintavivarjitaḥ/</l>
	<l>gurūpadiṣṭamārgeṇa yogam evaṃ sadābhyaset//</l>
      </lg>
      <lg xml:id="HP115">
	<l>atyāhāraḥ prayāsaś ca prajalpo niyamāgrahaḥ/</l>
	<l>janasaṃsahya laulyaṃ ca ṣaḍbhir yogaḥ praṇaśyati//</l>
      </lg>
      <lg xml:id="HP116">
	<l>utsāhaniścayau dhairyyaṃ tattvajñānaṃ ca niścalam/</l>
	<l>janasaṅgaparityāgaḥ ṣaḍbhir yogaḥ prasidhyati//</l>
      </lg>
      <lg xml:id="HP116a">
	<l/>
	<l>ahiṃsā satyam asteyaṃ brahmacaryaṃ kṣamā dhṛtiḥ/</l>
	<l>dayārjavamitāhāraḥ śaucañ ceti yamā daśaḥ//</l>
      </lg>
      <lg xml:id="HP116b">
	<l>tapaḥ santoṣa āstikyaṃ dānam  īśvarapūjanaṃ/</l>
	<l>siddhāntaśravaṇaṃ caiva hrīr mmatiś ca japo hutaṃ//</l>
	<l/>
      </lg>
      <lg xml:id="HP116c">
	<l>athāsanāni//</l>
      </lg>
      <lg xml:id="HP117">
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam ucyate/</l>
	<l>tatkuryād āsanaṃ pūrvam ārogyaṃ cāṅgapāṭavaṃ//</l>
      </lg>
      <lg xml:id="HP118">
	<l>vaśiṣṭhādau munibhir matsyendrādyaiś ca yogibhiḥ/</l>
	<l>aṅgīkṛtā nyāsanāni kathyante kānicinmayā//</l>
      </lg>
      <lg xml:id="HP119">
	<l>jānūrvor antare samyak kṛtvā pādatale ubhe/</l>
	<l>ṛjukāyaḥ samāsīnaḥ svastikaṃ tat pracakṣyate//</l>
      </lg>
      <lg xml:id="HP119a">
	<l/>
	<l/>
      </lg>
      <lg xml:id="HP119b">
	<l/>
	<l/>
      </lg>
      <lg xml:id="HP120">
	<l>savye dakṣiṇagulphaṃ tu pṛṣṭhapārśve niyojayet/</l>
	<l>dakṣiṇe 'pi tathā savyaṃ gomukhaṃ gomukhākṛtiḥ//</l>
      </lg>
