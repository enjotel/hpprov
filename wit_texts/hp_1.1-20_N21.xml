      <lg xml:id="HP11">
	<l>śrīādināthāya namo 'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājasaudham āroḍhum icchor adhirohiṇīva//</l>
      </lg>
      <lg xml:id="HP12">
	<l>praṇamya śrī guruṃ nāthaṃ svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhavidyopadiśyate//</l>
      </lg>
      <lg xml:id="HP13">
	<l>bhrāntyā bahumatadhvānte rājayogam ajānatām/</l>
	<l>haṭhapradīpikāṃ dhatte svātmārāmaḥ kṛpākaraḥ//</l>
      </lg>
      <lg xml:id="HP14">
	<l>haṭhavidyā hi matsyendragorakṣādyā vijānate/</l>
	<l>svātmārāmo 'thavā yogī jānīte tatprasādataḥ//</l>
      </lg>
      <lg xml:id="HP15">
	<l>śrīādināthamatsyendraśābarānandabhairavāḥ/</l>
	<l>cauraṅgīmīnagorakṣavirūpākṣabileśayāḥ//</l>
      </lg>
      <lg xml:id="HP16">
	<l>manthānabhairavo yogī siddhabuddhaś ca kanthaḍī/</l>
	<l>koraṃtakaḥ surānandaḥ siddhapādaś ca carpaṭiḥ//</l>
      </lg>
      <lg xml:id="HP17">
	<l>kānerī pūjyapādaś ca nityanātho nirañjanaḥ/</l>
	<l>kapālībindunāthaś ca kākacaṇḍīśvarāvayaḥ//</l>
      </lg>
      <lg xml:id="HP18">
	<l>alasaprabhudevaś ca ghorācolī ca tiṇṭiṇī/</l>
	<l>bālukī nāgabodhaś ca khaṇḍaḥ kāpālikas tathā//</l>
      </lg>
      <lg xml:id="HP19">
	<l>ityādayo mahāsiddhā haṭhayogaprasādataḥ/</l>
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍaṃ vicaranti te//</l>
      </lg>
      <lg xml:id="HP110">
	<l>saṃsāratāpataptānāṃ āśrayo yaṃ mato haṭhaḥ/</l>
	<l>aśeṣayogajātānām ādhārakaṃato haṭhaḥ//</l>
      </lg>
      <lg xml:id="HP111">
	<l>haṭhavidyā paraṃ gopyā yoginā siddhim icchatā/</l>
	<l>bhaved vīryavatī guptā nirvīryā tu prakāśitā//</l>
      </lg>
      <lg xml:id="HP112">
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l>
	<l/>
	<l>  </l>
	<l> </l>
	<l/>
	<l> </l>
	<l>ekānte maṭhikāmadhye sthātavyaṃ haṭhayoginā//</l>
	<l/>
      </lg>
      <lg xml:id="HP113">
	<l>alpadvāram arandhragartapiṭhakaṃ nātyuccanīcāyataṃ/</l>
	<l>ramyaṃ gomayasāndraliptavimalaṃ niḥśeṣabādhojjitam/</l>
	<l>bāhye maṇḍapavedikūparuciraṃ prākārasaṃveṣṭitaṃ/</l>
	<l>proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ//</l>
      </lg>
      <lg xml:id="HP114">
	<l>evaṃvidham maṭhe sthitvā sarvacintāvivarjitaḥ/</l>
	<l>gurūpadiṣṭamārgeṇa yogam eva sadābhyaset//</l>
      </lg>
      <lg xml:id="HP115">
	<l>atyāhāraprayāsaś ca prajalpo niyamagrahaḥ/</l>
	<l>janasaṃghaś ca laulyaṃ ca ṣaḍbhir yogā vinaśyati//</l>
      </lg>
      <lg xml:id="HP116">
	<l>utsāhān .. .. hasādvairyāt tattvajñānā ccaniścajāj/</l>
	<l>janasaṅgaparityāgāt ṣaḍbhir yogaḥ prasidhyati//</l>
      </lg>
      <lg xml:id="HP116a">
	<l/>
	<l>   </l>
	<l>  </l>
      </lg>
      <lg xml:id="HP116b">
	<l/>
	<l> </l>
	<l/>
      </lg>
      <lg xml:id="HP116c">
	<l/>
      </lg>
      <lg xml:id="HP117">
	<l>haṭhasya prathamāṅgatvād āsanaṃ pūrvam ucyate/</l>
	<l>tatkuryād āsanaṃ sthairyam ārogyaṃ cāṅgapāṭavaṃ//</l>
      </lg>
      <lg xml:id="HP118">
	<l>vaśiṣṭhadyaiś ca munibhir matsyendrādyaiś ca yogibhiḥ/</l>
	<l>aṅgīkṛtā nyāsanāni kathyante kānicinmayā//</l>
      </lg>
      <lg xml:id="HP119">
	<l>jānūrvor antare samyak kṛtvā pādatale ubhe/</l>
	<l>ṛjukāyaḥ samāsīnaḥ svastikaṃ tat pracakṣate//</l>
      </lg>
      <lg xml:id="HP119a">
	<l/>
	<l/>
      </lg>
      <lg xml:id="HP119b">
	<l/>
	<l/>
      </lg>
      <lg xml:id="HP120">
	<l>savye dakṣiṇagulphaṃ tu pṛṣṭhapārśve niyojayet/</l>
	<l>dakṣiṇe 'pi tathā savyaṃ gomukhaṃ gomukhaṃ yathā//</l>
      </lg>
