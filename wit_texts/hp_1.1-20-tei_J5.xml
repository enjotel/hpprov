<lg xml:id="HP11"> <l> {} {} {} {} {} {}/</l> <l> {} {}{}{}{}{}//</l> </lg> <lg xml:id="HP12"> <l> praṇamya śrī guruṃ nāthaṃ svātmārāmeṇa yoginā/</l> <l> kevalaṃ rājayogāya haṭhavidyāpadiśyate//</l> </lg> <lg xml:id="HP13"> <l> bhrāntyā bahumataṃ dhīmāt rājayogam ajānatām/</l> <l> haṭhapradīpikā dhatte svātmārāmaḥ kṛtāpara//</l></lg> <lg xml:id="HP14"> <l> haṭhavidyā hi matsendragorakṣādi ṣu rājate/</l> <l> svātmārāmo 'thavā yogī jānīte tatprasīdati//</l> </lg> <lg xml:id="HP15"> <l> śrīādināmatsendraśabarānandabhairavaḥ/</l> <l> coraṃgīpānagorakṣavirupākṣasavālikaḥ//</l> </lg> <lg xml:id="HP16"> <l> panthānabhairavo yogī siddhibuddhiś cakanthaḍī/</l> <l> goraṃṭakasurānandasiddhapādaś ca paryaṭī//</l></lg> <lg xml:id="HP17"> <l> kaṇerī pūlapādaś ca nityanātho nirañjanaḥ/</l> <l> kapālībinduś ca kākacaṇḍīśvarogajaḥ//</l> </lg> <lg xml:id="HP18"> <l> allumaḥprabhudevaś ca ghoḍācolī ca ṭīṃcaṇī/</l> <l> tālukīnāma tuṇḍīśa siddhaḥ kapālikas tathā//</l> </lg> <lg xml:id="HP19"> <l> ityādayo mahāsiddhā haṭhayogaprabhāvataḥ/</l> <l> ṣaḍayitvā kāladaṇḍaṃ brahmāṃḍeṣu ranti te//</l> </lg> <lg xml:id="HP110"> <l> saṃsāratāpataptānāṃ samāśrayamaho haṭhaḥ/</l> <l> {}{}{}{}{}//</l> </lg> <lg xml:id="HP111"> <l> haṭhavidyā paraṃ gopyaṃ yogināṃ siddhim icchatām/</l> <l> bhaved vīryavatī gopyā nivīryā tu prakāśitā//</l> </lg> <lg xml:id="HP112"> <l> surājye dhārmike deśe subhikṣe nirupadrave/</l> <l> </l> <l>   </l> <l>  </l> <l> </l> <l>  </l> <l> </l> <l> ekānte maṭhikāmadhye sthātavyaṃ haṭhayogibhiḥ//</l> <l> </l> </lg> <lg xml:id="HP113"> <l> alpadvāram arandhragartaviṭakaṃ nāccanīcāyataṃ/</l> <l> samyag gomayasāndra<rdg wit="#G5 #N20 #Ko #P15">lipta</rdg><rdg wit="#N22 #P3 #P7">{<supplied><gap reason="deleted" unit="syllable" quantity="2"/></supplied>}</rdg></l>lipyavimalaṃ nissa .ṣajantūjjhitam/ <l> bāhya maṇḍapa prākārasaṃveṣṭitaṃ/</l> <l> proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhai haṭhābhyāsibhi//</l> </lg> <lg xml:id="HP114"> <l> evaṃ madhyemaṭhe sthitvā sarvacintāvivarjitaḥ/</l> <l> gurupadiṣṭamārgeṇa yogam evaṃ samabhyaset//</l> </lg> <lg xml:id="HP115"> <l> atyāhāraprayāsasya prajalpo niyamagrahaḥ/</l> <l> janasaṅgaś ca laulyaś ca ṣaḍbhir yogaḥ vinaśyati//</l> </lg> <lg xml:id="HP116"> <l> utsāhaniścayā dhyairyātattvajñānārthadarśanāt/</l> <l> janasaṅgaparityāgāt ṣaḍbhir yogo prasidhyate//</l> </lg> <lg xml:id="HP116a"> <l> </l> <l>    </l> <l>   </l> </lg> <lg xml:id="HP116b"> <l> </l> <l>  //</l> <l> //</l> </lg> <lg xml:id="HP116c"> <l> </l> </lg> <lg xml:id="HP117"> <l> haṭhasya prathamāṅgasyādāsanaṃ pūrvam ucyate/</l> <l> ta kuryād āsanaṃsvairyamārogyaṃ cāṅgapāṭave//</l> </lg> <lg xml:id="HP118"> <l> vasiṣṭhādyaiś ca munibhir matsyendrādyaiś ca yogibhiḥ/</l> <l> aṅgīkṛtāny āsanāni kathyante kānicinmayā//</l> </lg> <lg xml:id="HP118a"> <l> </l> </lg> <lg xml:id="HP118b"> <l> </l> <l> </l> </lg> <lg xml:id="HP118c"> <l> </l> <l> </l> </lg> <lg xml:id="HP119"> <l> jānavor etare samyak kṛtvā pādatale ubhe/</l> <l> ṛjukāyasamāsīnasvastikaṃ ca pracakṣate//</l> </lg> <lg xml:id="HP119a"> <l> </l> <l> </l> </lg> <lg xml:id="HP119b"> <l> </l> <l> </l> </lg> <lg xml:id="HP120"> <l> savye dakṣagulphaṃ tu pṛṣṭepāśve niyojayet/</l><l> dakṣaṇe 'pi tathā savyaṃ gomukhaṃ gomukhaṃ bhavet//</l> </lg>
