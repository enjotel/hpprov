<lg xml:id="HP11"> <l> śrīādināthāya namo 'stu tasmaiḥ yenopadiṣṭā haṭhajogavidyā/</l> <l> virājate pronnatarājasaukham dharmādhirūvam adhirohiṇī ca//</l> </lg> <lg xml:id="HP12"> <l> praṇamya śrī guruṃ nāthasvātmārāmeṇa yoginī/</l> <l> kevalaṃ rājayogāya haṭhavidyopadiśyate// </l> </lg> <lg xml:id="HP13"> <l> bhrāṃnmā bahumatadhvānte rājayogam jānanaṃ/</l> <l> haṭhapradīpikā dhatte svātmārāma kṛpākaraḥ// </l></lg> <lg xml:id="HP14"> <l> haṭhavidyāṃ hi matsyendragorakṣādyā vijānate/</l> <l> svātmārāmo 'thavā yogī jānate tatprasādataḥ// </l> </lg> <lg xml:id="HP15"> <l> śrīādināthamatsyendraśābarānandabhairavā/</l> <l> ca..raṃgīmīnagorakṣaḥ virūpākṣābileśayāḥ// </l> </lg> <lg xml:id="HP16"> <l> manthānabhairavo yogī sidhanudhaś ca kandalī/</l> <l> pauraṃṭakasurānandasiddhapādaś ca{} carpaṭiḥ// </l> </lg> <lg xml:id="HP17"> <l> kānerī pūrvapādaś ca nityanātho {}/</l> <l> {}{} {}// </l> </lg> <lg xml:id="HP18"> <l> {}{} {} {} {}/</l> <l> {}{} {}{}// </l> </lg> <lg xml:id="HP19"> <l> {} {}{}{}/</l> <l> {} {}{} {} {}// </l> </lg> <lg xml:id="HP110"> <l> {}{}{} {}{}/</l> <l> {}{}{}{}{}// </l> </lg> <lg xml:id="HP111"> <l> {} {} {} {} {}{}/</l> <l> {}{} {} {} {} {}// </l> </lg> <lg xml:id="HP112"> <l> {}{}{} {}/</l> <l> </l> <l>   </l> <l>  </l> <l> </l> <l>  </l> <l> {}{}{}{} {}{}//</l> <l> </l> </lg> <lg xml:id="HP113"> <l> {}{}{}{}{}{}/</l> <l> {}{}{}{} {}{}/</l> <l> {} {}{} {}saṃveṣṭitaṃ/</l> <l> proktaṃ yogamaṭhasya lakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ// </l> </lg> <lg xml:id="HP114"> <l> evaṃvidhe maṭhasmitvā sarvacintāvivarjitaḥ/</l> <l> gurūpadiṣṭamārgeṇa yogam evaṃ samabhyaset// </l> </lg> <lg xml:id="HP115"> <l> atyāhāraprayā saha prajalpo niyamagrahaḥ/</l> <l> janasaṅgaś ca laubhyaṃ ca ṣaḍbhir yogo vinaśyatiḥ//</l> </lg> <lg xml:id="HP116"> <l> utśmāhanikhilādhairyā kṛtvājñānāc ca darśanāt/</l> <l> janasaṅgaparityāgāt ṣaḍbhiyogo prasidhyati// </l> </lg> <lg xml:id="HP116a"> <l> </l> <l>    </l> <l>   </l> </lg> <lg xml:id="HP116b"> <l> </l> <l>  </l> <l> </l> 