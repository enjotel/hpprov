      <lg xml:id="HP11">
	<l>śrīādināthāya namo 'stu tasmai yenopadiṣṭā haṭhayogavidyā/</l>
	<l>virājate pronnatarājasaudham āroḍhum icchor adhirohiṇīva//</l>
      </lg>
      <lg xml:id="HP12">
	<l>praṇamya śrī guruṃ nāthaṃ svātmārāmeṇa yoginā/</l>
	<l>kevalaṃ rājayogāya haṭhayogopadiśyate//</l>
      </lg>
      <lg xml:id="HP13">
	<l>bhrāntyā bahumatadhvānte rājayogam ajānatām/</l>
	<l>haṭhapradīpikāṃ dhatte svātmārāmaḥ kṛpākaraḥ//</l>
      </lg>
      <lg xml:id="HP14">
	<l>haṭhavidyāṃ hi matsyendragorakṣādyā vijānate/</l>
	<l>svātmārāmo 'thavā yogī jānīte tatprasādataḥ//</l>
      </lg>
      <lg xml:id="HP15">
	<l>śrīādināthamatsyendraśāṃvarānandabhairavāḥ/</l>
	<l>cauraṅgīmīnagorakṣavirūpākṣabileśayā//</l>
      </lg>
      <lg xml:id="HP16">
	<l>manthānabhairavo yogī siddhibuddhaś ca  kanthaḍiḥ/</l>
	<l>koraṇṭīkaḥ surānandasiddhapādaś ca carppaṭiḥ//</l>
      </lg>
      <lg xml:id="HP17">
	<l>kanerī pūjyapādaś ca nityanātho nirañjanaḥ/</l>
	<l>kāpālībindunāthaś ca kākacaṇḍīśvarādayaḥ//</l>
      </lg>
      <lg xml:id="HP18">
	<l>alasaḥ prabhudevaś ca ghoḍācolī ca ṭiṭiṇī/</l>
	<l>vālakī nāgabodhaś ca khaṇḍakāpālikās tathā//</l>
      </lg>
      <lg xml:id="HP19">
	<l>ityādayo mahāsiddhāḥ haṭhayogaprabhāvataḥ/</l>
	<l>khaṇḍayitvā kāladaṇḍaṃ brahmāṇḍe viramanti te//</l>
      </lg>
      <lg xml:id="HP110">
	<l>saṃsāratāpataptānāṃ samāśrayamato haṭhaḥ/</l>
	<l>aśeṣayogajagatām ādhāraḥ kamaṭho haṭhaḥ//</l>
      </lg>
      <lg xml:id="HP111">
	<l>haṭhavidyā paraṃ gopyā yogināṃ siddhim icchatām/</l>
	<l>bhaved vīryavatī guptā nirvīryā tu prakāśitā//</l>
      </lg>
      <lg xml:id="HP112">
	<l>surājye dhārmike deśe subhikṣe nirupadrave/</l>
	<l/>
	<l>  </l>
	<l> </l>
	<l/>
	<l>dhanupramāṇaparyantaṃ śilājalāgnivarjitā/</l>
	<l>ekāntimaṭhikāmadhye sthātavyaṃ haṭhayoginā//</l>
	<l/>
      </lg>
      <lg xml:id="HP113">
	<l>alpadvāram arandhragarbhaviṭapaṃ nātyuccanīcāyutaṃ/</l>
	<l>samyakgomayasārdraliptavimalaṃ niḥśeṣavāt dhā*dg*ataṃ/</l>
	<l>bāhye maṇḍapavedikūparuciraṃ prākārasaṃvetaṃ/</l>
	<l>proktaṃ yogamaṭhalakṣaṇam idaṃ siddhair haṭhābhyāsibhiḥ//</l>
      </lg>
      <lg xml:id="HP114">
	<l>evaṃvidhe maṭhe sthitvā sarvacintāvivarjitaḥ/</l>
	<l>gurūpadiṣṭamārgeṇa yogam eva sadābhyaset//</l>
      </lg>
      <lg xml:id="HP115">
	<l>atyāhāraprayāsaś ca prajalpo niyamagrahaḥ/</l>
	<l>janasaṅgaś ca laulyaṃ ca ṣaḍbhir yogaḥ praṇaśyati//</l>
      </lg>
      <lg xml:id="HP116">
	<l>utsāhān niścayād dhairyāt tattvajñānārthadarśanāt/</l>
	<l>janasaṅgaparityāgāt ṣaḍbhir yogaḥ prasidhyati//</l>
      </lg>
      <lg xml:id="HP116a">
	<l/>
	<l>   </l>
	<l>  </l>
      </lg>
      <lg xml:id="HP116b">
	<l/>
	<l> </l>
	<l/>
      </lg>
      <lg xml:id="HP116c">
	<l/>
      </lg>
      <lg xml:id="HP117">
	<l>haṭhasya prathamāṅgatvād āsanapūrvam ucyate/</l>
	<l>tatkuryād āsanaṃ sthairyam ārogyaṃ cāṅgapāṭavaṃ//</l>
      </lg>
      <lg xml:id="HP118">
	<l>vasiṣṭhādyaiś ca munibhir matsyendrādyaiś ca yogibhiḥ/</l>
	<l>aṅgīkṛtvā nyāsanāni kathyante kānicinmayā//</l>
      </lg>
      <lg xml:id="HP119">
	<l>jānūrvor antare samyak kṛtvā pādatale ubhe/</l>
	<l>ṛjukāyasamāsīnaḥ svastikaṃ tat pracakṣate//</l>
      </lg>
      <lg xml:id="HP119a">
	<l/>
	<l/>
      </lg>
      <lg xml:id="HP119b">
	<l/>
	<l/>
      </lg>
      <lg xml:id="HP120">
	<l>savye dakṣiṇagulphaṃ tu pṛṣṭhapārśve niyojayet/</l>
	<l>dakṣiṇe 'pi tathā savyaṃ gomukhaṃ gomukhaṃ yathā//</l>
      </lg>
